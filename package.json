{
  "name": "eslint-config-pv",
  "version": "1.0.0",
  "description": "pro!vision ESLint configuration. Can be adapted and adjusted in each project.",
  "author": {
    "name": "pro!vision GmbH",
    "url": "http://www.pro-vision.de"
  },
  "contributors": [
    {
      "name": "David Ding",
      "email": "dding@pro-vision.de"
    },
    {
      "name": "Fritz Stelluto",
      "email": "fstelluto@pro-vision.de"
    },
    {
      "name": "Matthias Hauch",
      "email": "mhauch@pro-vision.de"
    }
  ],
  "preferGlobal": true,
  "homepage": "https://github.com/pro-vision/eslint-config-pv",
  "bugs": {
    "url": "https://github.com/pro-vision/eslint-config-pv/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pro-vision/eslint-config-pv.git"
  },
  "scripts": {
    "lint": "grunt eslint",
    "release": "npm version ${BUMP:-\"patch\"} --no-git-tag-version && git add package.json && git commit -m \"Autogenerated pre-deployment commit\" && git reset HEAD~2 && git add . && git commit -am \"Release $(cat package.json | jq -r .version)\" && git push --tags && npm publish && git push -f origin master"
  },
  "main": "es6.js",
  "keywords": [
    "eslint",
    "eslintconfig",
    "pro!vision"
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "grunt": "^1.0.0",
    "grunt-eslint": "^19.0.0"
  },
  "dependencies": {
    "eslint-plugin-import": "^2.0.0"
  }
}
